+/// Custom clipper to create a folder tab shape
+class FolderTabClipper extends CustomClipper<Path> {
+  final double tabWidth;
+  final double stepDown;
+  final double cornerRadius;
+  final double transitionCurve;
+
+  const FolderTabClipper({
+    required this.tabWidth,
+    this.stepDown = 10.0,
+    this.cornerRadius = 12.0,
+    this.transitionCurve = 8.0,
+  });
+
+  @override
+  Path getClip(Size size) {
+    final path = Path();
+    
+    // Start from bottom-left corner with radius
+    path.moveTo(0, size.height - cornerRadius);
+    path.quadraticBezierTo(0, size.height, cornerRadius, size.height);
+    
+    // Bottom edge
+    path.lineTo(size.width - cornerRadius, size.height);
+    
+    // Bottom-right corner
+    path.quadraticBezierTo(
+      size.width, size.height,
+      size.width, size.height - cornerRadius,
+    );
+    
+    // Right edge up to the body top
+    path.lineTo(size.width, stepDown + cornerRadius);
+    
+    // Top-right corner of body section
+    path.quadraticBezierTo(
+      size.width, stepDown,
+      size.width - cornerRadius, stepDown,
+    );
+    
+    // Top edge of body section, moving left towards the tab transition
+    path.lineTo(tabWidth + transitionCurve * 2, stepDown);
+    
+    // Smooth curve up and over the "elbow" then back to horizontal
+    path.cubicTo(
+      tabWidth + transitionCurve, stepDown,        // First control point (start curving up)
+      tabWidth + transitionCurve, 0,               // Second control point (peak of curve)
+      tabWidth, 0,                                 // End point back at horizontal (top of tab)
+    );
+    
+    // Horizontal top edge of tab with rounded corner
+    path.lineTo(tabWidth - cornerRadius, 0);
+    
+    // Continue top edge to left
+    path.lineTo(cornerRadius, 0);
+    
+    // Top-left corner
+    path.quadraticBezierTo(0, 0, 0, cornerRadius);
+    
+    // Left edge down to start
+    path.close();
+    
+    return path;
+  }
+
+  @override
+  bool shouldReclip(FolderTabClipper oldClipper) {
+    return tabWidth != oldClipper.tabWidth ||
+           stepDown != oldClipper.stepDown ||
+           cornerRadius != oldClipper.cornerRadius ||
+           transitionCurve != oldClipper.transitionCurve;
+  }
+}
